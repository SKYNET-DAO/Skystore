<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp15"
    android:gravity="center"
    android:layout_marginLeft="@dimen/dp1"
    android:layout_marginRight="@dimen/dp1"
    android:background="@drawable/selector_common_item"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:text="2019-10-30"
        android:textColor="@color/gray3"
        />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/time"
    android:layout_marginTop="@dimen/dp10"
    android:id="@+id/content"
    android:gravity="center_vertical"
    >


    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/dp25"
        android:layout_height="@dimen/dp25"
        android:scaleType="centerCrop"
        android:src="@mipmap/item_trans_send"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"

        />


    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-----"
        android:textColor="@color/black"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dp18"
        android:layout_toRightOf="@+id/icon"
        android:textSize="@dimen/dp14"

        />


    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-----"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_toRightOf="@+id/icon"
        android:layout_below="@+id/state"
        android:textSize="@dimen/dp12"
        android:textColor="@color/gray2"
        android:layout_marginRight="@dimen/dp15"
        android:singleLine="true"


        />




    <com.android.wallet.widgets.CurrencyTextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-----"
        android:layout_marginTop="@dimen/dp2"
        android:gravity="center"
        android:singleLine="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/state"
        android:textSize="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_alignParentTop="true"


        />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp45"
        android:layout_marginRight="@dimen/dp15"
        android:background="@color/gray5"
        android:layout_below="@+id/address"
        android:layout_marginTop="@dimen/dp10"

        />


</RelativeLayout>

</RelativeLayout>
